{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "jenkins-s2i",
        "annotations": {
            "openshift.io/display-name": "Hello World Pipelines",
            "description": "Basic Jenkins Pipelines to show that OCP / Jenkins / Nexus integration.",
            "iconClass": "icon-jenkins",
            "tags": "instant-app,jenkins"
        }
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "labels": {
                    "build": "hello-world-maven"
                },
                "name": "hello-world-maven"
            },
            "spec": {
                "nodeSelector": {},
                "output": {},
                "postCommit": {},
                "resources": {},
                "runPolicy": "Serial",
                "source": {
                    "contextDir": "hello-world-maven",
                    "git": {
                        "ref": "${MAVEN_SOURCE_REPOSITORY_REF}",
                        "uri": "${MAVEN_SOURCE_REPOSITORY_URL}"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "jenkinsPipelineStrategy": {
                        "jenkinsfilePath": "Jenkinsfile"
                    },
                    "type": "JenkinsPipeline"
                },
                "triggers": [
                    {
                        "github": {
                            "secret": "${MAVEN_GITHUB_WEBHOOK_SECRET}"
                        },
                        "type": "GitHub"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "labels": {
                    "build": "hello-world-npm"
                },
                "name": "hello-world-npm"
            },
            "spec": {
                "nodeSelector": {},
                "output": {},
                "postCommit": {},
                "resources": {},
                "runPolicy": "Serial",
                "source": {
                    "contextDir": "hello-world-npm",
                    "git": {
                        "ref": "${NPM_SOURCE_REPOSITORY_REF}",
                        "uri": "${NPM_SOURCE_REPOSITORY_URL}"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "jenkinsPipelineStrategy": {
                        "jenkinsfilePath": "Jenkinsfile"
                    },
                    "type": "JenkinsPipeline"
                },
                "triggers": [
                    {
                        "github": {
                            "secret": "${NPM_GITHUB_WEBHOOK_SECRET}"
                        },
                        "type": "GitHub"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "MAVEN_GITHUB_WEBHOOK_SECRET",
            "displayName": "GitHub Webhook Secret for Maven",
            "description": "A secret string used to configure the GitHub webhook for the Maven hello world pipeline.",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{40}"
        },
        {
            "name": "NPM_GITHUB_WEBHOOK_SECRET",
            "displayName": "GitHub Webhook Secret for NPM",
            "description": "A secret string used to configure the GitHub webhook for the NPM hello world pipeline.",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{40}"
        },
        {
            "name": "MAVEN_SOURCE_REPOSITORY_URL",
            "displayName": "Git Repository URL",
            "description": "The URL of the repository with your Jenkinsfile.",
            "required": true,
            "value": "https://github.com/rht-labs/Jenkinsfiles"
        },
        {
            "name": "MAVEN_SOURCE_REPOSITORY_REF",
            "displayName": "Git Reference",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default (master) branch.",
            "value": "master"
        },
        {
            "name": "NPM_SOURCE_REPOSITORY_URL",
            "displayName": "Git Repository URL",
            "description": "The URL of the repository with your Jenkinsfile.",
            "required": true,
            "value": "https://github.com/rht-labs/Jenkinsfiles"
        },
        {
            "name": "NPM_SOURCE_REPOSITORY_REF",
            "displayName": "Git Reference",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default (master) branch.",
            "value": "master"
        }
    ],
    "labels": {
        "template": "hello-world-pipelines"
    }
}